<div class="container">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <div class="row mb-4">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/dashboard"><i style="font-size: 14px;" class="fa-solid fa-arrow-left"></i></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              <%= task.title %>
            </li>
          </ol>
        </nav>
        <p style="margin-top: -13px; margin-left: -8px;">Chiqish</p>
      </div>
    </div>
  
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><%= task.title %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">Do you really want to delete it <%= task.title %>?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <a href="/dashboard/delete/<%= task._id  %>" class="btn btn-primary">Ok</a>
          </div>
        </div>
      </div>
    </div>
  
    <div class="delete-button mb-4">
      <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn"><i class="fa-solid fa-trash-can" style="color: #ff0000;"></i></button>
    </div>
  
    <!-- update -->
    <form action="/dashboard/update/<%= task._id  %>" method="post">
      <div class="form-group mb-4">
        <input type="text" class="form-control fw-bold border-1" placeholder="Title" name="title" value="<%= task.title %>" required/>
      </div>
      <div class="form-group mb-4">
        <textarea class="form-control" name="body" id="body" cols="30" rows="10" required="true" placeholder="Enter a body..."><%=task.body%></textarea
        >
      </div>
      <div class="form-group mb-4">
        <button class="btn"><script src="https://cdn.lordicon.com/lordicon.js"></script>
          <script src="https://cdn.lordicon.com/lordicon.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/ylvuooxd.json"
    trigger="hover"
    style="width:40px;height:40px">
</lord-icon></button>
      </div>
    </form>
  </div>
  